{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "API for the app generator/manager"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url": "/exist/apps/tei-publisher-generator"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "paths": {
        "/{page}.html": {
            "get": {
                "description": "Load HTML page via templating",
                "operationId": "api:page",
                "parameters": [
                    {
                        "name": "page",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The expanded HTML content",
                        "content": {
                            "text/html": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/generator/{profile}": {
            "post": {
                "operationId": "api:generator",
                "parameters": [
                    {
                        "name": "profile",
                        "in": "path",
                        "schema": {
                            "type": "string",
                            "example": "base"
                        },
                        "required": true,
                        "description": "The name of the profile to use"
                    },
                    {
                        "name": "overwrite",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "default",
                                "update",
                                "all"
                            ],
                            "default": "default"
                        },
                        "required": true,
                        "description": "The policy to use for overwriting existing files. The default is to not overwrite."
                    }
                ],
                "requestBody": {
                    "required": true,
					"content": {
                        "application/json": {
							"schema": {
								"type": "object"
							}
						}
					}
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/templates": {
            "post": {
                "operationId": "api:expand-template",
                "description": "Expand the provided template",
                "parameters": [],
                "requestBody": {
					"required": true,
					"content": {
                        "application/json": {
							"schema": {
								"type": "string"
							}
						}
					}
				},
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}